#!/bin/zsh

# Author: James Batman
# Date Created: 11/30/2021
# Last Modified: 12/13/2021

# Description
# git push the listed repos

# Usage
# gg

d1=~/.dotfiles
d2=~/code/shell/scripts
d3=~/code/cpp/utilities
d4=~/code/cpp/functional
d5=~/code/cpp/idioms
d6=~/code/cpp/experimental
d7=~/code/cpp/courses/design_patterns
d8=~/code/cpp/sdl

ds=($d1 $d2 $d3 $d4 $d5 $d6 $d7 $d8)

for d in $ds; do
    git -C $d add .
    git -C $d commit -m "."
    git -C $d push -u origin main
done

exit 0
