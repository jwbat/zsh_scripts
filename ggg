#!/bin/zsh

g=$gold;

z="$(tput setaf 63)"
clear;

echo "$g
    ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
"

git add .

if [ -z "$1" ]; then
    git commit -m "$(date '+%Y-%m-%d %H:%M:%S')"
else
    git commit -m "$1"
fi

git push

echo "$g
    ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
"

exit 0
