#!/bin/zsh

# Description
# vue help 

# Usage
# vueh 
c="$(tput setaf 87)"

echo "$c
  npm install -g @vue/cli
  npm update -g @vue/cli
  vue --version

  npm install -g create-vue@latest

  // create build-tool enabled project
  npm init vue@latest      (alias = niv) 
  npm install
  vue add vuetify
  npm run dev

  // or
  vue create projectname
  npm install vue-router@4
  npm install pinia@next
=======
  npm init vue@latest                       =niv
  npm install                               =ni
  npm run dev                               =nrd

  // or
  vue create projectname
  cd projectname
  vue add vuetify
  vue create --help
"


exit 0
