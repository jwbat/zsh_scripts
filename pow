#!python3

# Usage
# pow <arg1> <arg2>   
import sys

RED   = '\033[1;31m'
BLUE  = "\033[1;34m"
CYAN  = "\033[1;36m"
GREEN = "\033[0;32m"

sys.stdout.write(CYAN)

if len(sys.argv) != 3:
    print('usage: pow <number1> <number2>')
    exit()

try:
    x = float(eval(sys.argv[1]))
    y = float(eval(sys.argv[2]))
    print('\n\t', pow(x, y), '\n')

except:
    print('usage: pow <number1> <number2>')
