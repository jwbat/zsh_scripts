#!/bin/zsh

# Author: James Batman
# Date Created: 12/23/2021
# Last Modified: 12/23/2021

# Description
# print powers of 2
# depends on a c++ binary, pow2

# Usage
# p2  

color='\033[0;32m'

echo $color
for p in {0..20}; do
    printf "%10s %4s %8s \n" "2 ^" "$p: "  "$(pow2 2 $p)"
done
echo

exit 0
