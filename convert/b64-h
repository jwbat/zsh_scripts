#! python
# Description
# convert base64 to hex 

import sys
import binascii
from colored import fg


xs = sys.argv[1:]

c1 = fg(150)
c2 = fg(154)
c3 = fg(213)


def base64_to_hex(n):
    b = binascii.a2b_base64(n)
    return binascii.hexlify(b).decode('utf-8')


def pretty_print(xs, ys):
    print()
    for idx in range(len(xs)):
        x, y = xs[idx], ys[idx]
        print(c3 + ' base64: ', c1 + x)
        print(c3 + ' hex: ', c2 + y)
    print()


ys = [base64_to_hex(x) for x in xs]
pretty_print(xs, ys)
