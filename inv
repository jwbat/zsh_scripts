#! python3

import os
import sys
import subprocess as sp
import csv
from colored import fg

blue = fg(87)
red = fg(196)
yellow = fg(225)
file = os.path.expanduser('~/code/shell/scripts/stuff/invoices.csv')
fields = []
rows = []

p1 = sp.run('date', capture_output=True, text=True)
date = p1.stdout;
words = date.split(' ')[0 : 3]
print(yellow + '\n\t\t\t Today is ' + ' '.join(words))


with open(file, 'r') as csvfile:
    reader = csv.reader(csvfile)
    fields = next(reader)

    print()
    for field in fields:
        print(red + field.rjust(20), end='')
    print()
 
    for row in reader:
        for item in row:
            print(blue + item.rjust(20), end='')
        print()

    print() 

